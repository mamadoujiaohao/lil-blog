<div class="row mt-0">
  {{#each work}}
    <div class="col-md-4 " style="width: 20rem; ">
      <div class="card mb-4 shadow-sm ">
          <img class="card-img-top" src ="{{this.dataValues.pic}}" alt="Card image cap" width="286px" height="180px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        <div class="card-body secondary ">
          <h4 class="card-text">
              {{this.dataValues.title}}
          </h4>
        </div>
        <hr>
        <div class="card-body d-flex justify-content-end ">
          <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#id{{this.dataValues.id}}">more</button>
        </div>
        
      </div>
      {{>workInfo}}
    </div>
  {{/each}}
</div>

