<div class="row mt-0">
  {{#if user.isAdmin}}
    <div>
      <button class="btn btn-outline-primary btn-sm mb-3 ">
        <a href="/portfolio/create" class="nav-link p-0 ">+ Add</a>
      </button>
    </div>
  {{/if}}
  {{#each work}}
    <div class="col-md-4 " style="width: 20rem; ">
      <div class="card mb-4 shadow-sm ">
          <img class="card-img-top" src ="{{this.dataValues.pic}}" alt="Card image cap" width="286px" height="180px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        <div class="card-body secondary ">
          <h4 class="card-text">
              {{this.dataValues.title}}
          </h4>
        </div>
        <hr>
        <div class="card-body d-flex justify-content-end p-0 mb-2 mx-2">
          {{#if ../user.isAdmin}}
            <a href="#" class="btn btn-danger m-1 btn-sm" role="button" aria-disabled="true" data-bs-toggle="modal" data-bs-target="#delete{{this.dataValues.id}}">Delete</a>
            <a href="#" class="btn btn-secondary m-1 btn-sm" role="button" aria-disabled="true">Edit</a>
          {{/if}}
          <button class="btn btn-secondary m-1 btn-sm" role="button" aria-disabled="true" data-bs-toggle="modal" data-bs-target="#show{{this.dataValues.id}}">More</button>
        </div>
      </div>
      {{>workInfo}}
       <!--  {{>delete-message}} 有問題-->
    </div>
  {{/each}}
</div>

