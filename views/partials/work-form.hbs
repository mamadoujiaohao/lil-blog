  <div class="form-row mb-3">
    <label class="form-label" for="title">Title</label>
    <input class="form-control" type="text" name="title" id="title" placeholder="Enter title" value="{{work.title}}" required>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="text">Text</label>
    <textarea class="form-control" id="text" name="text" rows="5"  placeholder="Write description here" style="white-space: pre-wrap;">{{work.text}}</textarea>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="href">href</label>
    <input class="form-control" type="text" name="href" id="href" placeholder="Enter href" value="{{work.href}}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="pic">Pic</label>
    <input class="form-control" type="file" name="pic" id="pic" placeholder="Enter pic href here(temporary)" value="{{work.pic}}">
  </div>
  <button type="submit" class="btn btn-secondary">Submit</button>