<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Login</h1>
</div>
<form class="form-signin" action="/user/login" method="POST">
  <div class="form-row mb-3">
    <label class="form-label" for="email">Email</label>
    <input class="form-control" id="email" type="text" name="email" class="form-control" placeholder="Email" required
      autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">Password</label>
    <input class="form-control" id="password" type="password" name="password" class="form-control"
      placeholder="Password" required>
  </div>
  <button class="btn btn-primary btn-block" type="submit" data-keyboard="true">Submit</button>
</form>
<div class="mb-4 text-center">
  <p><a href="/user/signup">Sign Up</a></p>
  <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
  <a href="/auth/google" class="btn btn-info btn-block">Google Login</a>
</div>