<div class="row mt-0">
  {{#if user.isAdmin}}
    <div>
      <button class="btn btn-outline-primary btn-sm mb-3 ">
        <a href="/blog/create" class="nav-link p-0 ">+ Add</a>
      </button>
    </div>
  {{/if}}
  </div>
  {{#each article}}
    <div class=" article card mb-3" style="max-width: 600px;">
      <div class="row g-0">
        <div class="">
          <div class="card-body">
            <h3 class="card-title">{{this.title}}</h3>
            <p class="card-text"><small class="text-muted"> {{this.updatedAt}} __by {{ this.userName}}<span class="badge rounded-pill bg-primary ms-3"> {{this.tag}}</span> </small></p>
            <p class="card-text">{{this.text}}</p>
            <div class="card-body d-flex justify-content-end p-0 mb-2 mx-2">
              {{#if ../user.isAdmin}}
                <form action="/blog/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-outline-danger m-1 btn-sm" onclick="return confirm(`Sure you want to delete {{ this.title}}ï¼Ÿ`)">Delete</button>
                </form>
                <a href="/blog/{{this.id}}/edit" class="btn btn-outline-secondary m-1 btn-sm" role="button" aria-disabled="true">Edit</a>
              {{/if}}
              <a href="/blog/{{this.id}}" class="btn btn-outline-secondary m-1 btn-sm" role="button" aria-disabled="true">More</a>
            </div>
          </div>
      </div>
    </div>
  {{/each}}
</div>
